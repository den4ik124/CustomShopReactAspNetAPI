@model CustomIdentity.Models.UserLoginModel
@{
    ViewData["Title"] = "Login page";

}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Вход</h3>

            <form asp-action="Login" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="ReturnUrl" />
                <div class="row"> 
                    <div class="col">
                        <div class="form-group">
                            <input asp-for="LoginProp" class="form-control" placeholder="Логин"/>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <input asp-for="EmailProp" class="form-control" placeholder="или Email" />
                        </div>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    </div>
                </div>

               

                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-default">Войти</button>
                </div>
            </form>

        </div>
    </div>
</div>
